<Window x:Class="SchoolDemoWPF2.Views.SemesterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolDemoWPF2.Views"
        mc:Ignorable="d"
        Title="SemesterSelectionWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Статистика по 1 семестру" Margin="5" Height="40" 
                    Width="200" Click="FirstSemester_Click"/>
            <Button Content="Статистика по 2 семестру" Margin="5" Height="40" 
                    Width="200" Click="SecondSemester_Click"/>
            <Button Content="Выйти" Margin="5" Height="40" Width="200" 
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
