<Window x:Class="SchoolDemoWPF2.Views.AddEditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolDemoWPF2.Views"
        mc:Ignorable="d"
        Title="AddEditStudentWindow" Height="450" Width="430">
    <Grid Margin="10">

        <Label Content="Full Name:" Style="{StaticResource ModernLabelStyle}" HorizontalAlignment="Left" Width="380" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="FullNameTextBox" Margin="0,21,0,0" HorizontalAlignment="Left" Width="380" Height="21" VerticalAlignment="Top"/>

        <Label  Content="Phone Number:" Margin="0,81,0,0" Style="{StaticResource ModernLabelStyle}" HorizontalAlignment="Left" Width="380" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneTextBox"  Margin="0,104,0,0" HorizontalAlignment="Left" Width="380" Height="21" VerticalAlignment="Top"/>

        <Label  Content="Email:" Margin="0,42,0,0" Style="{StaticResource ModernLabelStyle}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="380"/>
        <TextBox x:Name="EmailTextBox" Margin="0,62,0,0" HorizontalAlignment="Left" Width="380" Height="19" VerticalAlignment="Top"/>

        <Label Content="Birthday:" Margin="0,130,0,0" Style="{StaticResource ModernLabelStyle}" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="380"/>
        <DatePicker x:Name="BirthdayPicker" Margin="0,151,0,0" HorizontalAlignment="Left" Width="380" Height="34" VerticalAlignment="Top"/>
        <Button Content="Save" Click="SaveButton_Click" Margin="0,0,106,10" Style="{StaticResource SuccessButtonStyle}" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="84"/>
        <Button Content="Cancel" Margin="0,0,10,10" Click="CancelButton_Click" Style="{StaticResource OrangeButtonStyle}" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="82"/>
    </Grid>
</Window>
